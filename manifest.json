{
    "name": "Ava and Carly Extension",
    "description": "Extension",
    "version": "1.0",
    "manifest_version": 3,
    "background":{
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon":{
            "16": "/images/pink16.png",
            "32": "/images/pink32.png",
            "48": "/images/pink48.png",
            "128": "/images/pink128.png"
        }
    },
    "icons": {
        "16": "/images/pink16.png",
        "32": "/images/pink32.png",
        "48": "/images/pink48.png",
        "128": "/images/pink128.png"
      },
    "options_page": "options.html"
} 